#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
SCRIPT_DIR="$DIR/bibtex2html-1.99-linux"
BIB_DIR="$DIR/../bib"

$SCRIPT_DIR/bibtex2html -s ieeetr --no-abstract --no-keywords --nodoc --nobibsource \
    --no-keys -nodoi -noeprint -linebreak -d -r \
    -nf webpage ' <i class="fa fa-link"></i>&nbsp;Website&nbsp;' \
    -nf talk ' <i class="fas fa-chalkboard-teacher"></i>&nbsp;Talk&nbsp;' \
    -nf video ' <i class="fa fa-play"></i>&nbsp;Video&nbsp;' \
    -nf url '<i class="fa fa-file-pdf"></i>&nbsp;PDF&nbsp;' \
    -note award \
    --output $BIB_DIR/progress-bib $BIB_DIR/progress.bib

# Remove the "generated by" message.
sed -i 's/<hr>.*$//' $BIB_DIR/progress-bib.html
sed -i '$ d' $BIB_DIR/progress-bib.html

# Make the title bold instead of in quotations.
sed -i 's/&ldquo;/<b>/
        s/&rdquo;/<\/b>/' $BIB_DIR/progress-bib.html

# Remove the square brackets and pipes from links.
sed -i 's/^\[//
        s/]$//
        s/|\s*$//' $BIB_DIR/progress-bib.html

# Remove font size change and add star for awards.
sed -i 's/<blockquote><font size="-1">/<i class="fa fa-star"><\/i><i>/
        s/<\/font><\/blockquote>/<\/i>/' $BIB_DIR/progress-bib.html
